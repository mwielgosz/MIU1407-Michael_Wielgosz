// Create new accoung page
var createAccountWindow = Ti.UI.currentWindow;

// Local variables
var layoutMarginSmall = 4,
	layoutMargin = 8;
	
// Main view for window contents
var basicView = Ti.UI.createView({
	layout : "vertical",
	backgroundColor: "#000",
	borderRadius: 8,
	borderWidth: 1,
	top : layoutMarginSmall,
	width : "100%"
});

createAccountWindow.add(basicView);

