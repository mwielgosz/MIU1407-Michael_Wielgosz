// Global variables
var bgColor = "#1E1E1E",
	bgImage = "background.png",
	layoutMarginSmall = 4,
	layoutMarginNormal = 8;
	
// Set the default background color/image
Ti.UI.setBackgroundColor(bgColor);

// Main app window
var mainWindow = Ti.UI.createWindow({
	title : "Utility",
	backgroundImage : bgImage,
	backgroundRepeat : true
});

// NavigationWindow object for iOS
var navWindow = Ti.UI.iOS.createNavigationWindow({
	window : mainWindow
});

var loginView = Ti.UI.createView({
	backgroundColor : "#fff",
	height: "30%",
	width : "80%",
	center : true,
	borderColor : "#fff",
	borderWidth : 1,
	borderRadius: 8
});

var usernameLabel = Ti.UI.createLabel({
	text: "Username",
	font: {fontSize:16, fontWeight:"bold"},
	color : "#000",
	left: layoutMarginNormal,
	top: layoutMarginNormal + layoutMarginSmall,
	textAlign : "left"
});
loginView.add(usernameLabel);

var usernameTextView = Ti.UI.createTextArea({
	borderWidth: 1,
  	borderColor: '#bbb',
  	borderRadius: 4,
  	color: '#888',
  	font: {fontSize:12, fontWeight:"bold"},
  	keyboardType: Ti.UI.KEYBOARD_APPEARANCE_DEFAULT,
  	returnKeyType: Ti.UI.RETURNKEY_NEXT,
  	autocorrect : false,
  	textAlign: "left",
  	hintText: "Type your username",
  	top: layoutMarginNormal,
  	width: 150, 
  	height : 25,
  	//left: usernameLabel.left + usernameLabel.width
  	right : layoutMarginNormal
});
usernameTextView.addEventListener("click", function(e){
	console.log(e.source.value);
	e.source.value = "";
});

loginView.add(usernameTextView);

mainWindow.add(loginView);

navWindow.open();



