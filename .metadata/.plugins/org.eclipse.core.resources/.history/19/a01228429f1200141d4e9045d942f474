// Global variables
var bgColor = "#202020",
	bgImage = "background.png",
	pHeight = Ti.Platform.displayCaps.getPlatformHeight(),
    pWidth = Ti.Platform.displayCaps.getPlatformWidth(),
    layoutMargin = 10,
    imagesPerRow = 2,
    imageContainerWidth = pWidth - layoutMargin,
    thumbnailSize = (imageContainerWidth / imagesPerRow) - layoutMargin,
    loadJsonData = require("phoneData"),
	jsonData = loadJsonData.json;

// Main app window
var mainWindow = Ti.UI.createWindow({
	title : "Top Smartphones",
	backgroundColor : bgColor,
	backgroundImage : bgImage,
	backgroundRepeat : true
});

// NavigationWindow object for iOS
var navWindow = Ti.UI.iOS.createNavigationWindow({
	window : mainWindow
});

// Scroll view container for grid view
var phoneContainer = Ti.UI.createScrollView({
    top: 0,
    bottom: layoutMargin,
    layout: "horizontal",
    width: pWidth,
    contentWidth: pWidth,
    showVerticalScrollIndicator: true
});
